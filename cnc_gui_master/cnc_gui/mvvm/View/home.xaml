                    <TextBlock Text="排屑機量級                時間" FontSize="20" FontWeight="Bold" Height="35" Margin="0,10,0,0"/>
                    <StackPanel Orientation="Horizontal" Margin="0,3,0,0">
                        <TextBlock x:Name="excluder_lv1_str" Text="21%~30%" FontSize="20" FontWeight="Bold" Width="132"/>
