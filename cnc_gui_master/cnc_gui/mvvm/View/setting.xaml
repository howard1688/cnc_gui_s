<Page x:Class="cnc_gui.setting"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
      xmlns:local="clr-namespace:cnc_gui" d:DataContext="{d:DesignInstance Type=local:settingViewModel}"
      mc:Ignorable="d" 
      xmlns:hc="https://handyorg.github.io/handycontrol" 
      d:DesignHeight="765" d:DesignWidth="1100"
      Title="setting">
    <Viewbox>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="340"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="199"/>
                <RowDefinition Height="25"/>
                <RowDefinition Height="172"/>
                <RowDefinition Height="110"/>
                <RowDefinition Height="90"/>
                <RowDefinition Height="160"/>
            </Grid.RowDefinitions>
            <Border Width="320" Height="174" CornerRadius="30" Margin="10,10,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Background="#FFF2F2F2" Grid.RowSpan="1" Grid.ColumnSpan="1">
                <StackPanel>
                    <TextBlock Text="控制器IP與埠號設定" FontSize="25" FontWeight="Bold" Height="35" Margin="0,10,0,0" HorizontalAlignment="Center" Foreground="#FF2C3E50"/>
                    <StackPanel Orientation="Horizontal" Margin="40,20,0,0" HorizontalAlignment="Left" >
                        <TextBlock Text="IP" FontSize="20" Height="22" Foreground="#FF084F6A" FontWeight="Bold"/>
                        <hc:TextBox x:Name="setting_ip" Text="{Binding cnc_ip_text}" Width="160" Height="30" FontSize="20" VerticalContentAlignment="Center" BorderThickness="0" Padding="0" Background="Black" Margin="50,0,0,0" TextAlignment="Center" KeyDown="ip_text_keyDown">
                            <TextBox.Template>
                                <ControlTemplate TargetType="TextBox">
                                    <Border Background="#c0c0c0" BorderBrush="Black" BorderThickness="1" CornerRadius="4">
                                        <ScrollViewer x:Name="PART_ContentHost"/>
                                    </Border>
                                </ControlTemplate>
                            </TextBox.Template>
                        </hc:TextBox>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="40,20,0,0" HorizontalAlignment="Left" >
                        <TextBlock Text="埠號" FontSize="20" Height="22" Foreground="#FF084F6A" FontWeight="Bold"/>
                        <hc:TextBox x:Name="setting_port" Text="{Binding cnc_port_text}" Width="60" Height="30" FontSize="20" VerticalContentAlignment="Center" BorderThickness="0" Padding="0" Background="Black" Margin="27,0,10,0" TextAlignment="Center" KeyDown="port_text_keyDown">
                            <TextBox.Template>
                                <ControlTemplate TargetType="TextBox">
                                    <Border Background="#c0c0c0" BorderBrush="Black" BorderThickness="1" CornerRadius="4">
                                        <ScrollViewer x:Name="PART_ContentHost"/>
                                    </Border>
                                </ControlTemplate>
                            </TextBox.Template>
                        </hc:TextBox>
                        <!--
                    <TextBlock Text="連線狀態 " FontSize="20" Height="22" />
                    <TextBlock x:Name="connect_light" Text="&#xf111;" FontSize="25" Foreground="#B8161C" Margin="0,3,0,0" FontFamily="/font/Font Awesome 6 Free Solid.otf#Font Awesome 6 Free Solid"/>
                    -->
                    </StackPanel>
                </StackPanel>
            </Border>
            <Border Width="320" Height="184" CornerRadius="30" Margin="10,197,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Background="#FFF2F2F2" Grid.RowSpan="3" Grid.ColumnSpan="1">
                <StackPanel>
                    <TextBlock Text="底座環沖控制設定" FontSize="25" FontWeight="Bold" Height="35" Margin="0,10,0,0" HorizontalAlignment="Center" Foreground="#FF2C3E50"/>
                    <StackPanel Orientation="Horizontal" Margin="30,10,0,0" HorizontalAlignment="Left" >
                        <TextBlock Text="平台積屑量" FontSize="20" Height="24" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="#FF2C3E50"/>
                        <ComboBox x:Name="flusher_LevelComboBox" Width="100" HorizontalAlignment="Left" FontSize="20" Background="#c0c0c0" BorderBrush="Black" BorderThickness="1" Margin="60,0,0,0" ItemsSource="{Binding flusher_LevelOptions}" SelectedItem="{Binding flusher_selectedLevel_text, Mode=TwoWay}" />
                        <!-- 對應量級描述 -->
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="30,15,0,0" >
                        <TextBlock Text="量級級距" FontSize="20" Height="24" HorizontalAlignment="Center" TextAlignment="Center" Foreground="#FF2C3E50"/>
                        <TextBlock Text="{Binding flusher_selectedLevelDescription_text}"  Margin="75,0,0,0" FontSize="20" Width="110" TextAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="30,15,0,0" HorizontalAlignment="Left" >
                        <TextBlock Text="沖水秒數" FontSize="20" Height="24" />
                        <hc:TextBox x:Name="flusher_time_st" Text="{Binding flusher_selectedLevelTime_text, UpdateSourceTrigger=PropertyChanged}" Width="70" Height="30" FontSize="20" VerticalContentAlignment="Center" BorderThickness="0" Padding="0" Background="Black" Margin="80,0,0,0" TextAlignment="Center" KeyDown="flusher_time_KeyDown" >
                            <TextBox.Template>
                                <ControlTemplate TargetType="TextBox">
                                    <Border Background="#c0c0c0" BorderBrush="Black" BorderThickness="1" CornerRadius="4">
                                        <ScrollViewer x:Name="PART_ContentHost"/>
                                    </Border>
                                </ControlTemplate>
                            </TextBox.Template>
                        </hc:TextBox>
                        <TextBlock Text="秒" FontSize="20" Height="22" Margin="10,0,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Border>
            <Border Width="320" Height="186" CornerRadius="30" Margin="10,392,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Background="#FFF2F2F2" Grid.RowSpan="5" Grid.ColumnSpan="1">
                <StackPanel>
                    <TextBlock FontSize="25" FontWeight="Bold" Height="35" Margin="0,10,0,0" HorizontalAlignment="Center" Foreground="#FF2C3E50"><Run Text="排屑機積屑量"/><Run Language="zh-tw" Text="係數值"/><Run Text="設定"/></TextBlock>
                    <StackPanel Orientation="Horizontal" Margin="30,10,0,0" HorizontalAlignment="Left" >
                        <TextBlock FontSize="20" Height="24" HorizontalAlignment="Left" VerticalAlignment="Center" Text="平台積屑量"/>
                        <ComboBox x:Name="excluder_LevelComboBox" Width="100" HorizontalAlignment="Left" FontSize="20" Background="#c0c0c0" BorderBrush="Black" BorderThickness="1" Margin="60,0,0,0" ItemsSource="{Binding excluder_LevelOptions}" SelectedItem="{Binding excluder_selectedLevel_text, Mode=TwoWay}" />
                        <!-- 對應量級描述 -->
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="30,15,0,0" >
                        <TextBlock Text="量級級距" FontSize="20" Height="24" HorizontalAlignment="Center" TextAlignment="Center"/>
                        <TextBlock Text="{Binding excluder_selectedLevelDescription_text}"  Margin="75,0,0,0" FontSize="20" Width="110" TextAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="30,15,0,0" HorizontalAlignment="Left" >
                        <TextBlock FontSize="20" Height="24" Language="zh-tw" Text="係數值"/>
                        <hc:TextBox x:Name="excluder_time_st" Text="{Binding excluder_selectedLevelTime_text, UpdateSourceTrigger=PropertyChanged}" Width="70" Height="30" FontSize="20" VerticalContentAlignment="Center" BorderThickness="0" Padding="0" Background="Black" Margin="100,0,0,0" TextAlignment="Center" KeyDown="excluder_time_KeyDown" >
                            <TextBox.Template>
                                <ControlTemplate TargetType="TextBox">
                                    <Border Background="#c0c0c0" BorderBrush="Black" BorderThickness="1" CornerRadius="4">
                                        <ScrollViewer x:Name="PART_ContentHost"/>
                                    </Border>
                                </ControlTemplate>
                            </TextBox.Template>
                        </hc:TextBox>
                        <TextBlock Text="" FontSize="20" Height="22" Margin="10,0,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Border>
            <Border Width="320" Height="156" CornerRadius="30" Margin="10,590,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Background="#FFF2F2F2" Grid.RowSpan="6" Grid.ColumnSpan="1">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="排屑機啟動門檻值"  FontSize="25" FontWeight="Bold" Height="35" Margin="0,10,0,0" HorizontalAlignment="Center" Foreground="#FF2C3E50"/>
                    <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                        <TextBlock Text="每" FontSize="20" Height="24"/>
                        <hc:TextBox x:Name="excluder_period_st" Text="{Binding excluder_threshold_text}" Width="70" Height=" 30" FontSize="20" VerticalContentAlignment="Center" BorderThickness="0" Padding="0" Background="Black" Margin="30,0,10,0" TextAlignment="Center" KeyDown="excluder_period_st_KeyDown">
                            <TextBox.Template>
                                <ControlTemplate TargetType="TextBox">
                                    <Border Background="#c0c0c0" BorderBrush="Black" BorderThickness="1" CornerRadius="4">
                                        <ScrollViewer x:Name="PART_ContentHost"/>
                                    </Border>
                                </ControlTemplate>
                            </TextBox.Template>
                        </hc:TextBox>
                        <StackPanel>
                            <TextBlock FontSize="20" Text="排屑機係數積累值" TextAlignment="Center"/>
                            <TextBlock Text="啟動一次排屑機" FontSize="20"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Border>
            <Border Width="735" Height="204" CornerRadius="30" Margin="340,10,10,0" HorizontalAlignment="Left" VerticalAlignment="Top" Background="#FFF2F2F2" Grid.RowSpan="2" Grid.ColumnSpan="3">
                <StackPanel>
                    <TextBlock Text="環沖與排屑機I/O控制設定" FontSize="25" FontWeight="Bold" Height="35" Margin="0,10,0,0" HorizontalAlignment="Center" Foreground="#FF2C3E50"/>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="記憶體位置" FontSize="20" Margin="160,0,0,0"/>
                        <TextBlock Text="二進位" FontSize="20" Margin="70,0,0,0"/>
                        <TextBlock Text="十進位" FontSize="20" Margin="80,0,0,0"/>
                    </StackPanel>
                    <StackPanel Margin="15,15,0,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="底座環沖" FontSize="20" Margin="0,5,0,0"/>
                            <hc:TextBox x:Name="flusher_address_handl_st" Text="{Binding flusher_address_handl_text}" Width="22" Height="35" FontSize="20" BorderThickness="0" Padding="0" Background="Black" Margin="35,0,0,0" TextAlignment="Center" KeyDown="flusher_address_handl_KeyDown">
                                <TextBox.Template>
                                    <ControlTemplate TargetType="TextBox">
                                        <Border Background="#c0c0c0" BorderBrush="Black" BorderThickness="1" CornerRadius="4">
                                            <ScrollViewer x:Name="PART_ContentHost"/>
                                        </Border>
                                    </ControlTemplate>
                                </TextBox.Template>
                            </hc:TextBox>
                            <hc:TextBox x:Name="flusher_address_st" Text="{Binding flusher_address_text}" Width="100" Height="35" FontSize="20" BorderThickness="0" Padding="0" Background="Black" Margin="10,0,0,0" TextAlignment="Center" KeyDown="flusher_address_KeyDown">
                                <TextBox.Template>
                                    <ControlTemplate TargetType="TextBox">
                                        <Border Background="#c0c0c0" BorderBrush="Black" BorderThickness="1" CornerRadius="4">
                                            <ScrollViewer x:Name="PART_ContentHost"/>
                                        </Border>
                                    </ControlTemplate>
                                </TextBox.Template>
                            </hc:TextBox>
                            <TextBlock x:Name="flusher_address_binary_st" Text="{Binding flusher_address_binary_text}" Width="150" Height="35" FontSize="20" Margin="20,0,0,0" TextAlignment="Center" />
                            <hc:TextBox x:Name="flusher_address_decimal_st" Text="{Binding flusher_address_decimal_text}"  Width="100" Height="35" FontSize="20" BorderThickness="0" Padding="0" Background="Black" Margin="20,0,0,0" TextAlignment="Center" KeyDown="flusher_address_decimal_KeyDown">
                                <TextBox.Template>
                                    <ControlTemplate TargetType="TextBox">
                                        <Border Background="#c0c0c0" BorderBrush="Black" BorderThickness="1" CornerRadius="4">
                                            <ScrollViewer x:Name="PART_ContentHost"/>
                                        </Border>
                                    </ControlTemplate>
                                </TextBox.Template>
                            </hc:TextBox>
                            <Button x:Name="flusher_control_setting" Style="{StaticResource ButtonPrimary}" FontSize="20"  Height="40" Width="120" Margin="10,0,0,0" Click="flusher_button_Click" BorderThickness="0" Cursor="Hand">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border" Background="#2C3E50" CornerRadius="8" Padding="10,5">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <!-- 滑鼠懸停時變亮橙色 -->
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#E67E22"/>
                                            </Trigger>
                                            <!-- 按下時變深橙色 -->
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#D35400"/>
                                            </Trigger>
                                            <!-- 按鈕失效時變灰色 -->
                                            <Trigger Property="IsEnabled" Value="False">
                                                <Setter TargetName="border" Property="Background" Value="#BDC3C7"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>

                                <TextBlock Text="底沖啟動" Foreground="White" FontWeight="Bold"/>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="15,15,0,0">
                        <TextBlock Text="  排屑機  " FontSize="20" Margin="0,5,0,0"/>
                        <hc:TextBox x:Name="excluder_address_handl_st" Text="{Binding excluder_address_handl_text}" Width="22" Height="35" FontSize="20" BorderThickness="0" Padding="0" Background="Black" Margin="35,0,0,0" TextAlignment="Center" KeyDown="excluder_address_handl_KeyDown">
                            <TextBox.Template>
                                <ControlTemplate TargetType="TextBox">
                                    <Border Background="#c0c0c0" BorderBrush="Black" BorderThickness="1" CornerRadius="4">
                                        <ScrollViewer x:Name="PART_ContentHost"/>
                                    </Border>
                                </ControlTemplate>
                            </TextBox.Template>
                        </hc:TextBox>
                        <hc:TextBox x:Name="excluder_address_st" Text="{Binding excluder_address_text}" Width="100" Height="35" FontSize="20" BorderThickness="0" Padding="0" Background="Black" Margin="10,0,0,0" TextAlignment="Center" KeyDown="excluder_address_decimal_KeyDown">
                            <TextBox.Template>
                                <ControlTemplate TargetType="TextBox">
                                    <Border Background="#c0c0c0" BorderBrush="Black" BorderThickness="1" CornerRadius="4">
                                        <ScrollViewer x:Name="PART_ContentHost"/>
                                    </Border>
                                </ControlTemplate>
                            </TextBox.Template>
                        </hc:TextBox>
                        <TextBlock x:Name="excluder_address_binary_st" Text="{Binding excluder_address_binary_text}" Width="150" Height="35" FontSize="20" Margin="20,0,0,0" TextAlignment="Center" />
                        <hc:TextBox x:Name="excluder_address_decimal_st" Text="{Binding excluder_address_decimal_text}" Width="100" Height="35" FontSize="20" BorderThickness="0" Padding="0" Background="Black" Margin="20,0,0,0" TextAlignment="Center" KeyDown="excluder_address_decimal_KeyDown">
                            <TextBox.Template>
                                <ControlTemplate TargetType="TextBox">
                                    <Border Background="#c0c0c0" BorderBrush="Black" BorderThickness="1" CornerRadius="4">
                                        <ScrollViewer x:Name="PART_ContentHost"/>
                                    </Border>
                                </ControlTemplate>
                            </TextBox.Template>
                        </hc:TextBox>
                        <Button x:Name="excluder_control_setting" Style="{StaticResource ButtonPrimary}" FontSize="20"  Height="40" Width="120" Margin="10,0,0,0" Click="excluder_button_Click" BorderThickness="0" Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="border" Background="#2C3E50" CornerRadius="8" Padding="10,5">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <!-- 滑鼠懸停時變亮橙色 -->
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#E67E22"/>
                                        </Trigger>
                                        <!-- 按下時變深橙色 -->
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#D35400"/>
                                        </Trigger>
                                        <!-- 按鈕失效時變灰色 -->
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter TargetName="border" Property="Background" Value="#BDC3C7"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>

                            <TextBlock Text="排屑啟動" Foreground="White" FontWeight="Bold"/>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Border>
            <Border Width="735" Height="250" CornerRadius="30" Margin="340,226,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Background="#FFF2F2F2" Grid.RowSpan="4" Grid.ColumnSpan="3">
                <StackPanel Margin="0,10,0,0">
                    <TextBlock Text="底座環沖執行時間設定"  FontSize="25" FontWeight="Bold" Height="35" Margin="0,10,0,0" HorizontalAlignment="Center" Foreground="#FF2C3E50"/>
                    <StackPanel Orientation="Horizontal">
                        <lvc:PieChart Series="{Binding pie_Flusher_time_total_chart}" Margin="20,0,0,0" Height="180" Width="200" />
                        <StackPanel Margin="100,0,0,0">
                            <StackPanel Orientation="Horizontal" Margin="0,30,0,0">
                                <TextBlock  Text="&#xf111;" FontSize="22" Foreground="#42A5F4" Margin="0,0,5,0" FontFamily="/font/Font Awesome 6 Free Solid.otf#Font Awesome 6 Free Solid" Height="25"/>
                                <TextBlock Text="影像擷取與計算時間" FontSize="20"/>
                                <TextBlock Text="{Binding image_process_time_text}" FontSize="20" Margin="17,0,0,0" Width="60" TextAlignment="Center"/>
                                <TextBlock Text="秒" FontSize="20" Margin="11,0,0,0"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                <TextBlock  Text="&#xf111;" FontSize="22" Foreground="#F55F54" Margin="0,0,5,0" FontFamily="/font/Font Awesome 6 Free Solid.otf#Font Awesome 6 Free Solid" Height="25"/>
                                <TextBlock Text="可沖水總時間" FontSize="20"/>
                                <TextBlock Text="{Binding flusher_process_time_text}" FontSize="20" Margin="77,0,0,0" Width="60" TextAlignment="Center"/>
                                <TextBlock Text="秒" FontSize="20" Margin="11,0,0,0"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                <TextBlock  Text="&#xf111;" FontSize="22" Foreground="#F1C92C" Margin="0,0,5,0" FontFamily="/font/Font Awesome 6 Free Solid.otf#Font Awesome 6 Free Solid" Height="25"/>
                                <TextBlock Text="保留時間" FontSize="20" />
                                <TextBlock Text="{Binding delay_time_text}" FontSize="20" Margin="117,0,0,0" Width="60" TextAlignment="Center"/>
                                <TextBlock Text="秒" FontSize="20" Margin="11,0,0,0"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                <TextBlock Text="總運行時間                      " FontSize="20"/>
                                <hc:TextBox x:Name="total_work_time" Text="{Binding total_flusher_time_text}" Width="70" Height=" 30" FontSize="20" VerticalContentAlignment="Center" Background="Black" Margin="10,0,0,0" TextAlignment="Center" KeyDown="total_flusher_time_KeyDown">
                                    <TextBox.Template>
                                        <ControlTemplate TargetType="TextBox">
                                            <Border Background="#c0c0c0" BorderBrush="Black" BorderThickness="1" CornerRadius="4">
                                                <ScrollViewer x:Name="PART_ContentHost"/>
                                            </Border>
                                        </ControlTemplate>
                                    </TextBox.Template>
                                </hc:TextBox>
                                <TextBlock Text="秒" FontSize="20" Margin="5,0,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Border>
            <Border Width="362" Height="257" CornerRadius="30" Margin="340,488,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Background="#FFF2F2F2" Grid.RowSpan="6" Grid.ColumnSpan="2">
                <StackPanel HorizontalAlignment="Center" >
                    <TextBlock Text="積屑量級距定義" FontSize="25" FontWeight="Bold" Height="35" Margin="0,10,0,0" HorizontalAlignment="Center" Foreground="#FF2C3E50"/>
                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                        <TextBlock Text="極少量級" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <TextBlock Text="0" FontSize="20" Width="70" VerticalAlignment="Center" Margin="10,0,0,0" TextAlignment="Center"/>
                        <TextBlock Text=" % ~" FontSize="20" VerticalAlignment="Center"/>
                        <hc:TextBox x:Name="flusher_lev1_r" Text="{Binding flusher_level_1_max_text}" Width="70" Height=" 30" FontSize="20" VerticalContentAlignment="Center" Background="Black" Margin="10,0,0,0" TextAlignment="Center" KeyDown="flusher_level_1_KeyDown">
                            <TextBox.Template>
                                <ControlTemplate TargetType="TextBox">
                                    <Border Background="#c0c0c0" BorderBrush="Black" BorderThickness="1" CornerRadius="4">
                                        <ScrollViewer x:Name="PART_ContentHost"/>
                                    </Border>
                                </ControlTemplate>
                            </TextBox.Template>
                        </hc:TextBox>
                        <TextBlock Text=" %" FontSize="20" VerticalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                        <TextBlock Text="少量級    " FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="flusher_lev2_l" Text="{Binding flusher_level_2_min_text}" FontSize="20" Width="70" VerticalAlignment="Center" Margin="10,0,0,0" TextAlignment="Center"/>
                        <TextBlock Text=" % ~" FontSize="20" VerticalAlignment="Center"/>
                        <hc:TextBox x:Name="flusher_lev2_r" Text="{Binding flusher_level_2_max_text}" Width="70" Height=" 30" FontSize="20" VerticalContentAlignment="Center" Background="Black" Margin="10,0,0,0" TextAlignment="Center" KeyDown="flusher_level_2_KeyDown">
                            <TextBox.Template>
                                <ControlTemplate TargetType="TextBox">
                                    <Border Background="#c0c0c0" BorderBrush="Black" BorderThickness="1" CornerRadius="4">
                                        <ScrollViewer x:Name="PART_ContentHost"/>
                                    </Border>
                                </ControlTemplate>
                            </TextBox.Template>
                        </hc:TextBox>
                        <TextBlock Text=" %" FontSize="20" VerticalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                        <TextBlock Text="中量級    " FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="flusher_lev3_l" Text="{Binding flusher_level_3_min_text}" FontSize="20" Width="70" VerticalAlignment="Center" Margin="10,0,0,0" TextAlignment="Center"/>
                        <TextBlock Text=" % ~" FontSize="20" VerticalAlignment="Center"/>
                        <hc:TextBox x:Name="flusher_lev3_r" Text="{Binding flusher_level_3_max_text}" Width="70" Height=" 30" FontSize="20" VerticalContentAlignment="Center" Background="Black" Margin="10,0,0,0" TextAlignment="Center" KeyDown="flusher_level_3_KeyDown">
                            <TextBox.Template>
                                <ControlTemplate TargetType="TextBox">
                                    <Border Background="#c0c0c0" BorderBrush="Black" BorderThickness="1" CornerRadius="4">
                                        <ScrollViewer x:Name="PART_ContentHost"/>
                                    </Border>
                                </ControlTemplate>
                            </TextBox.Template>
                        </hc:TextBox>
                        <TextBlock Text=" %" FontSize="20" VerticalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                        <TextBlock Text="多量級    " FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="flusher_lev4_l" Text="{Binding flusher_level_4_min_text}" FontSize="20" Width="70" VerticalAlignment="Center" Margin="10,0,0,0" TextAlignment="Center"/>
                        <TextBlock Text=" % ~" FontSize="20" VerticalAlignment="Center"/>
                        <hc:TextBox x:Name="flusher_lev4_r" Text="{Binding flusher_level_4_max_text}" Width="70" Height=" 30" FontSize="20" VerticalContentAlignment="Center" Background="Black" Margin="10,0,0,0" TextAlignment="Center" KeyDown="flusher_level_4_KeyDown">
                            <TextBox.Template>
